                method:'POST',
                url:"/remove_i",
                data:data
            }).done(function(data){
                if(data.message && data.message=="error"){
                    alert("Oups, looks like there was some kind of issue on our side. Please try again later")
                    window.location.reload()
                }
                else window.location.reload()
            })
    })
})
</script>